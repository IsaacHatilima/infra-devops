ETCD_NAME="{{ etcd_name }}"
ETCD_DATA_DIR="/var/lib/etcd"
ETCD_INITIAL_CLUSTER="{{ etcd_initial_cluster_string }}"
ETCD_INITIAL_CLUSTER_STATE="new"
ETCD_INITIAL_CLUSTER_TOKEN="etcd-cluster"
ETCD_INITIAL_ADVERTISE_PEER_URLS="https://{{ etcd_ip }}:2380"
ETCD_LISTEN_PEER_URLS="https://0.0.0.0:2380"
ETCD_LISTEN_CLIENT_URLS="https://0.0.0.0:2379"
ETCD_ADVERTISE_CLIENT_URLS="https://{{ etcd_ip }}:2379"
ETCD_CLIENT_CERT_AUTH="true"
ETCD_TRUSTED_CA_FILE="/etc/etcd/ssl/ca.crt"
ETCD_CERT_FILE="/etc/etcd/ssl/etcd-postgres{{ etcd_cert_node_id }}.crt"
ETCD_KEY_FILE="/etc/etcd/ssl/etcd-postgres{{ etcd_cert_node_id }}.key"
ETCD_PEER_CLIENT_CERT_AUTH="true"
ETCD_PEER_TRUSTED_CA_FILE="/etc/etcd/ssl/ca.crt"
ETCD_PEER_CERT_FILE="/etc/etcd/ssl/etcd-postgres{{ etcd_cert_node_id }}.crt"
ETCD_PEER_KEY_FILE="/etc/etcd/ssl/etcd-postgres{{ etcd_cert_node_id }}.key"